@layer base {
  * {
    @apply border-border outline-ring/50;
  }
  body {
    @apply bg-background text-foreground;
  }
}

@layer utilities {
  .glass {
    backdrop-filter: blur(12px);
    background-color: oklch(1 0 0 / 10%);
    border: 1px solid oklch(1 0 0 / 20%);
  }
  
  .glass-dark {
    backdrop-filter: blur(12px);
    background-color: oklch(0 0 0 / 30%);
    border: 1px solid oklch(1 0 0 / 10%);
  }
  
  .hover-lift {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  
  .hover-lift:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px oklch(0 0 0 / 15%);
  }
  
  .gold-gradient {
    background: linear-gradient(135deg, oklch(0.72 0.15 70), oklch(0.82 0.12 75));
  }
  
  .status-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid var(--card);
  }
  
  .status-online {
    background-color: oklch(0.7 0.2 140);
  }
  
  .status-away {
    background-color: oklch(0.75 0.23 85);
  }
  
  .status-offline {
    background-color: oklch(0.5 0 0);
  }
  
  /* Dark theme premium effects */
  .dark .glass {
    backdrop-filter: blur(16px);
    background-color: oklch(1 0 0 / 5%);
    border: 1px solid oklch(0.72 0.15 70 / 20%);
    box-shadow: 0 0 20px oklch(0.72 0.15 70 / 5%);
  }
  
  .dark .glass-dark {
    backdrop-filter: blur(20px);
    background-color: oklch(0.18 0 0 / 80%);
    border: 1px solid oklch(0.72 0.15 70 / 30%);
    box-shadow: 0 0 30px oklch(0.72 0.15 70 / 10%);
  }
  
  .dark .hover-lift:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 32px oklch(0.72 0.15 70 / 15%);
  }
  
  .dark .gold-gradient {
    background: linear-gradient(135deg, oklch(0.72 0.15 70), oklch(0.82 0.12 75));
    box-shadow: 0 4px 20px oklch(0.72 0.15 70 / 30%);
  }
  
  /* Golden glow for interactive elements */
  .dark button:hover,
  .dark a:hover {
    box-shadow: 0 0 20px oklch(0.72 0.15 70 / 10%);
  }
  
  .dark button:focus-visible,
  .dark a:focus-visible {
    outline: 2px solid oklch(0.72 0.15 70 / 50%);
    outline-offset: 2px;
  }
  
  /* Enhanced card effects for dark theme */
  .dark .card-glow {
    box-shadow: 0 0 40px oklch(0.72 0.15 70 / 10%),
                0 8px 32px oklch(0 0 0 / 50%);
  }
  
  /* Smooth theme transitions */
  * {
    transition-property: background-color, border-color, color, fill, stroke;
    transition-duration: 300ms;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Premium accent hover states */
  .dark .accent-glow {
    position: relative;
    overflow: hidden;
  }
  
  .dark .accent-glow::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, oklch(0.72 0.15 70 / 20%), transparent);
    opacity: 0;
    transition: opacity 300ms;
  }
  
  .dark .accent-glow:hover::before {
    opacity: 1;
  }
  
  /* Enhanced section header glass for better visibility */
  .section-glass {
    backdrop-filter: blur(8px);
    background-color: oklch(0.97 0 0 / 90%);
    border: 1px solid oklch(0.90 0 0 / 60%);
    box-shadow: 0 2px 8px oklch(0 0 0 / 5%);
  }
  
  /* Dark theme section glass - maintain premium effects */
  .dark .section-glass {
    backdrop-filter: blur(16px);
    background-color: oklch(1 0 0 / 5%);
    border: 1px solid oklch(0.72 0.15 70 / 10%);
    box-shadow: 0 0 20px oklch(0.72 0.15 70 / 5%);
  }
  
  /* Remove all borders from theme toggle */
  .theme-toggle-no-border {
    outline: none !important;
    border: none !important;
  }
  
  .theme-toggle-no-border:focus-visible {
    outline: none !important;
    box-shadow: none !important;
  }
  
  .dark .theme-toggle-no-border:focus-visible {
    outline: none !important;
    box-shadow: none !important;
  }
}

